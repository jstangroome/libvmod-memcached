varnishtest "Test incr_set and decr_set"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import memcachedj from "${vmod_topbuild}/src/.libs/libvmod_memcachedj.so";

	sub vcl_init {
		memcachedj.servers("--SERVER=localhost:24472 --BINARY-PROTOCOL");
	}

	sub vcl_deliver {
		set resp.http.init =
		    memcachedj.incr_set("test05", 3, 2, 0);
		set resp.http.high =
		    memcachedj.incr_set("test05", 3, 2, 0);
		set resp.http.low =
		    memcachedj.decr_set("test05", 1, 2, 0);
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.init == "2"
	expect resp.http.high == "5"
	expect resp.http.low == "4"
} -run
