varnishtest "Test incr and decr with --SERVER"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import memcachedj from "${vmod_topbuild}/src/.libs/libvmod_memcachedj.so";

	sub vcl_init {
		memcachedj.servers("--SERVER=localhost:24472");
	}

	sub vcl_deliver {
		memcachedj.set("test02", "1", 0, 0);
		set resp.http.high = memcachedj.incr("test02", 3);
		set resp.http.low = memcachedj.decr("test02", 2);
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.high == "4"
	expect resp.http.low == "2"
} -run
