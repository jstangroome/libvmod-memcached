varnishtest "Test set and get with --SERVER"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import memcachedj from "${vmod_topbuild}/src/.libs/libvmod_memcachedj.so";

	sub vcl_init {
		memcachedj.servers("--SERVER=localhost:24472");
	}

	sub vcl_deliver {
		memcachedj.set("test01", "Hello, World", 0, 0);
		set resp.http.hello = memcachedj.get("test01");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
} -run
